<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OfferListTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_layout_selector</item>
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>
